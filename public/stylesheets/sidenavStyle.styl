textColor=rgba(86,87,94, 1)
rSNwidth = 250
#rightSideNav
    color:#fefefe
    float:right
    width:rSNwidth px
    background:#d6e6f6
    box-shadow:inset 1px 1px 3px textColor
    overflow:scroll
    overflow-y:hidden
    overflow-x:hidden
    .sideNavGroup
        margin-top:10px
        h1
            width:(rSNwidth - 30) px
            // background: #7f808a
            background: #fff
            border-top-left-radius: 3px
            border-bottom-left-radius: 3px
            box-shadow: 1px 1px 3px textColor
            height:25px
            float:right
            cursor:pointer
            p
                color:textColor
                padding-left:10px
                line-height: 25px
                font-size:15px
                font-weight:200
                text-shadow: 0px 0px 1px #232323
    .sideNavGroup:not(:first-child)
        h1
            margin-top:20px
    .listItemsNavGroup
        float:right
        .newProject
            width:200px
            height:28px
            margin-top:5px
            margin-right:20px
            line-height:26px
            float:right
            background:#accded
            .addProject
                display:block
                float:left
                height:28px
                background:#9ec4ea
                width:28px
                font-size:24px
                font-weight:400
                text-align:center
                cursor:pointer
                color:rgba(255,255,255,0.7)
            .addProject:hover
                color:rgba(255,255,255,1)
                background:#9ec4ea
            input
                width:167px
                padding-left:5px
                color:white
                background:#accded
                float:left
                border:0
                height:28px
            input::-webkit-input-placeholder
                color: rgba(255,255,255,0.4)
            input:-moz-placeholder
                color: rgba(255,255,255,0.4)
        ul
            display:block
            width:200px
            float:right
            margin-right:20px
            .listProjectItem
                background:#f2f7fc
                width:192px
                margin-top:3px
                padding:3px 3px 3px 5px
                color:textColor
                position:relative
.deleteProjectItem
    -webkit-touch-callout: none
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
    cursor:pointer 
    position:absolute
    right:5px
    top:5px
    height:17px
    width:17px
    font-size:10px
    line-height:17px
    border-radius:50%
    text-indent:0px
    text-align:center
    background:#d6e6f6
.deleteProjectItem:hover
    box-shadow:0px 0px 3px #fff inset
    background:#fbb1b1
    color:#fff
